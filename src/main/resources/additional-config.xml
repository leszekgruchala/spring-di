<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Can be used of course to define any bean you like and be imported in PropertiesValuesInjection class -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="classpath:jug.properties"/>
        <!-- Needed to use @ImportResource and @PropertySource together in same application -->
        <property name="ignoreUnresolvablePlaceholders" value="true" />
    </bean>

</beans>